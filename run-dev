#!/bin/bash

for line in $(cat ./env.list);
do
  if [ ${line:0:1} != '#' ]; then
    if [ $(echo $line | grep "\=") ]; then
      echo "[dev] - export env $line"
      export $line
    fi
  fi
done

npm run dev

