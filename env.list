#!/bin/bash

NODE_ENV=production

# the namespace of application
MR_NS=imqx
# the name of application
MR_NAME=moerae
# modify this path to persist server logs.
MR_LOG_PATH=~/Desktop/recent/moerae/volumes/logs

# output port while binding to the host.
MR_APP_PORT=8000
MR_SRV_PORT=8337
# the mongodb serve port in development.
MR_MONGO_DEV_PORT=9717
# modify this path to persist mongodb data.
MR_MONGO_DATA_PATH=~/Desktop/recent/moerae/volumes/devdata
# mongodb user password configuration.
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=toashintel